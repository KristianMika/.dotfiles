syntax on " syntax highlighting on

set noerrorbells " no sound notifications
set modelines=0
set ruler
set number	
set linebreak	
set showbreak=+++ 	
set textwidth=100	
set showmatch	
set visualbell	
set noswapfile
set undodir=~/.vim/undodir
set undofile
 
set hlsearch	
set smartcase	
set ignorecase	
set incsearch	
 
set autoindent	
set expandtab " replace tab by spaces
set shiftwidth=4	
set smartindent	
set smarttab	
set softtabstop=4	
set ttyfast
 
set colorcolumn=100
set background=dark
highlight ColorColumn ctermbg=0 guibg=lightgrey
 
set undolevels=1000	
set backspace=indent,eol,start	
